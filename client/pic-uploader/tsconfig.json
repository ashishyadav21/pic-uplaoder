{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.tsx", "src/**/*.jsx", "src/**/*.d.ts", "src/index.css", "src/login.ts", "src/login.ts","src/**/*.jpg", "src/**/*.png", "src/**/*.mp4", "src/components/Spinner.tsx"],
  "exclude": ["node_modules"]
}
